<view class="container">
  <image class="head-image" src="{{postData.imageSRC}}"></image>
  <view class="author-date">
    <image class="avatar" src="{{postData.headimage}}"></image>
    <text class="author">{{postData.author}}</text>
    <text class="const-text">发表于</text>
    <text class="date">{{postData.dateTime}}</text>
  </view>
  <text class="title">{{postData.title}}</text>
<view class="tool">
  <view class="circle">
    <image bind:tap="onCollect" class="share-img" src="/images/icon/dz.png"></image>
    <image src="/images/icon/pl.png"></image>
  </view>
  <view class="horizon"></view>
</view>
<text class="detail">{{postData.detail}}</text>
</view>