<view>
  <swiper circular indicator-dots="{{true}}" autoplay="{{true}}" interval="3000">
     <swiper-item>
      <image src="/images/tab/a.png">
      </image>
     </swiper-item>
     <swiper-item>
      <image src="/images/tab/b.png">
      </image>
     </swiper-item>
     <swiper-item>
      <image src="/images/tab/c.png">
      </image>
     </swiper-item>
  </swiper>

<block wx:for="{{postList}}" wx:key="index" wx:for-item="item" >
  <view data-post-id="{{item.postId}}" bind:tap="onGoToDetail" class="post-container">  
    <view class="post-author-date">
      <image class="post-author" src="{{item.headimage}}"></image>
      <text class="post-date">{{item.date}}</text>
    </view>
    <!-- {{item.postId}} -->

    <text class="post-title">{{item.a}}</text>

    <image class="post-image" src="{{item.imageSRC}}"></image>

    <text class="post-conent">{{item.b}}</text>

    <view class="post-like">
    <l-icon class="post-like-image" color="#666" size="28" name="favor" />
    <text class="post-like-font">{{item.reading}}</text>
    <l-icon class="post-like-image" color="#666" size="32" name="eye" />
    <text class="post-like-font">{{item.collection}}</text>
    </view>
  </view>
</block>
</view>